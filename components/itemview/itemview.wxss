/* 电影外圈可选视图 */
.item-navigator {
  width: 200rpx;
  padding-right: 15rpx;
  padding-left: 15rpx;
  display: inline-block;
}
/* 电影视图 */
.item-navigator .item-group {
  width: 100%;
}
/* 电影海报图片 */
.item-group .thumbnail-group {
  width: 100%;
  height: 284rpx;
}
.thumbnail-group .thumbnail {
  width: 100%;
  height: 100%;
}
/* 电影标题 */
.item-group .item-title {
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;  
  margin-bottom: 10rpx;
}