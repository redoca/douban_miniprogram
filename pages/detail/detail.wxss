/* 详情头 */
.item-header {
  padding: 60rpx 30rpx;
}
/* 标题 */
.item-header .item-title {
  font-size: 40rpx;
}

.item-header .item-detail {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.item-detail .left-detail {
  flex: 1;
  margin-right: 20rpx;
}

.left-detail .item-rate {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-rate .comment-persons {
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #ccc;
}
/* 右图 */
.item-detail .right-detail {
  width: 200rpx;
  height: 300rpx;
}
.right-detail image {
  width: 100%;
  height: 100%;
}

.item-sub-detail {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.item-sub-detail view{
  margin-bottom: 10rpx;
}

/* 标签云 */
.item-tags {
  padding: 0 30rpx;
}
.item-tags .item-tags-title {
  color: #b3b3b3;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.item-tags .item-tags-list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.item-tags-list text {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  font-size: 28rpx;
  color: #353535;
  border-radius: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

/* 评论列表 */
.comment-list-group {
  padding: 30rpx 30rpx;
}
.comment-list-group .comment-title {
  font-size: 32rpx;
  color: #b3b3b3;
}
.comment-list-group .comment-group {
  display: flex;
  justify-content: flex-start;
  padding-top: 30rpx;
}
/* 评论人头像 */
.comment-group .left-comment {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.left-comment .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
/* 右块 */
.comment-group .right-comment {
  flex: 1;
}
/* 用户评分 */
.right-comment .username-rate {
  display: flex;
  justify-content: flex-start;
  align-content: center;
}
/* 用户名 */
.username-rate .username {
  font-size: 30rpx;
  margin-right: 20rpx;
}
/* 评论时间 */
.right-comment .release-time {
  color: #b3b3b3;
  font-size: 30rpx;
  margin-top: 10rpx;
}
/* 评论内容 */
.right-comment .content {
  font-size: 30rpx;
  color: #353535;
  margin-top: 10rpx;
}

/* 更多短评 */
.more-comment {
  text-align: center;
  font-size: 36rpx;
  color: #41b357;
  margin-bottom: 40rpx;
}