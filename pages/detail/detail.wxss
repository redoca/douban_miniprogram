.item-header {
  padding: 60rpx 30rpx;
}

.item-header .item-title {
  font-size: 40rpx;
}

.item-header .item-detail {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.item-detail .left-detail {
  flex: 1;
  margin-right: 20rpx;
}

.left-detail .item-rate {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-rate .comment-persons {
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #ccc;
}

.item-detail .right-detail {
  width: 200rpx;
  height: 300rpx;
}

.right-detail image {
  width: 100%;
  height: 100%;
}

.item-sub-detail {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.item-sub-detail view{
  margin-bottom: 10rpx;
}